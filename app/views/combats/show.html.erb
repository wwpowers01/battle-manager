<div class="modal fade" id="addCombatantModal" tabindex="-1" role="dialog"></div>
<div id="<%= @combat.id %>" class="core-body combats">
  <div class="row split flex">
    <div class="combatants-col" id="one">
      <%= render 'combats_navbar' %>
      <div class="combatants">
        <ol id="combatants-list">
          <% @combat.combatants.each do |combatant| %>
            <%= render partial: 'combatants/combatant_lg', locals: { combatant: combatant } %>
          <% end %>
        </ol>
      </div>
    </div>
    <div class="details-col" id="two">
      <div class="details">
        Details
      </div>
    </div>
  </div>
</div>
