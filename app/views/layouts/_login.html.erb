<% if logged_in? %>
  <ul class="navbar-nav">
    <li class="nav-item active">
      <a href="#">
        <%= gravatar_for current_user, size: 20 %>
        <%= current_user.username %>
      </a>
    </li>
    <li class="nav-item">
      <%= link_to "Log out", logout_path, method: :delete %>
    </li>
  </ul>
<% else %>
  <%= form_for(:session, url: login_path, html: { class: "navbar-form navbar-right form-inline" }) do |f| %>
    <div class="form-group">
      <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
      <%= f.password_field :password, placeholder: "Password", class: "form-control"  %>
      <%= f.submit 'Login', class: "btn btn-default" %>
      <%= link_to 'Register', register_path,  data: { remote: true, toggle: "modal", target: "registerModal" }  %>
    </div>
    <!--<div class="checkbox">
      <%= f.check_box :remember_me %><%= f.label :remember_me %>
    </div>-->
  <% end %>
<% end %>
